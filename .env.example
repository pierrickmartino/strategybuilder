# Environment configuration for StrategyBuilder development

# Application runtime mode (development, staging, production, etc.)
APP_ENV=development

# API service binding configuration
API_HOST=0.0.0.0
API_PORT=8000

# Primary database connection string
DATABASE_URL=postgresql+asyncpg://blockbuilders:password@localhost:5432/blockbuilders

# Redis cache / task queue endpoint
REDIS_URL=redis://localhost:6379/0

# Supabase backend configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-key
SUPABASE_JWT_SECRET=dev-secret
SUPABASE_API_AUDIENCE=authenticated

# Public API endpoint for the Next.js frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

# Supabase client configuration exposed to the frontend
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key

# Stripe payment keys (public key for frontend, secret key for server)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_example
STRIPE_SECRET_KEY=sk_test_example

# OpenTelemetry collector endpoint for tracing/metrics
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Minimum log level (DEBUG, INFO, WARNING, etc.)
LOG_LEVEL=INFO
